issn = {0035-8711},
journal = {Monthly Notices of the Royal Astronomical Society},
keywords = {1 i n t,analytical,burst,direct supernova,gamma-ray,gamma-ray burst,general,hydrodynamics,methods,mhd,observations as,ro d u c,sne-grb,stars,statistical,t i o n,wolf-rayet},
