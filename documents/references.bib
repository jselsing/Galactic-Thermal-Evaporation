month = {oct},
number = {4},
pages = {4297--4306},
title = {{Swift J1112.2−8238: a candidate relativistic tidal disruption flare}},
url = {http://mnras.oxfordjournals.org/content/452/4/4297 http://mnras.oxfordjournals.org/lookup/doi/10.1093/mnras/stv1520},
